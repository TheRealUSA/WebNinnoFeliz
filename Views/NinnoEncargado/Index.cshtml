@model IEnumerable<WebNinnoFeliz.Models.ViewModels.NinnoEncargados>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<h1>Tabla de niños y su encargados</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
    <a asp-action="PDF" class="btn btn-primary">PDF</a>
</p>
<table id="Tabla" class="table">
    <thead class="table-dark">
        <tr>
            <th>
                IdNiñoEncargado
                @*@Html.DisplayNameFor(model => model.IdNinnoEncargado)*@
            </th>
            <th>
                Identificacion Encargado
                @*@Html.DisplayNameFor(model => model.IdEncargadoNavigation)*@
            </th>
            <th>
                Nombre Encargado
                @*@Html.DisplayNameFor(model => model.IdEncargadoNavigation)*@
            </th>
            <th>
                Apellido1 Encargado
                @*@Html.DisplayNameFor(model => model.IdEncargadoNavigation)*@
            </th>
            <th>
                Apellido2 Encargado
                @*@Html.DisplayNameFor(model => model.IdEncargadoNavigation)*@
            </th>
            <th>
                Parentezco
                @*@Html.DisplayNameFor(model => model.IdNinnoNavigation)*@
            </th>
            <th>
                Nombre niño
                @*@Html.DisplayNameFor(model => model.IdNinnoNavigation)*@
            </th>
            <th>
                Apellido1 niño
                @*@Html.DisplayNameFor(model => model.IdNinnoNavigation)*@
            </th>
            <th>
                Apellido2 niño
                @*@Html.DisplayNameFor(model => model.IdNinnoNavigation)*@
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNinnoEncargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentificacionEncargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEncargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apell1Encargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apell2Encargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetallePar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreNinno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apell1Ninno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apell2Ninno)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdNinnoEncargado" class="btn btn-success">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdNinnoEncargado" class="btn btn-info">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdNinnoEncargado" class="btn btn-danger">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#Tabla').DataTable();
        });
    </script>
}