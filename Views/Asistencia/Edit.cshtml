@model WebNinnoFeliz.Models.Asistencia

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Asistencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAsistencia" />
            <div class="form-group">
                <label asp-for="FechaAsist" class="control-label"></label>
                <input asp-for="FechaAsist" class="form-control" />
                <span asp-validation-for="FechaAsist" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoAsist" /> @Html.DisplayNameFor(model => model.EstadoAsist)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IdNinno" class="control-label"></label>
                <select asp-for="IdNinno" class="form-control" asp-items="ViewBag.IdNinno"></select>
                <span asp-validation-for="IdNinno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
