@model IEnumerable<WebNinnoFeliz.Models.Abonadore>
@{
    ViewData["Title"] = "PDF";
    Layout = "~/Views/Shared/_Sty.cshtml";
}

<h1>Tabla de Abonadores</h1>


<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdAbonador)
            </th>
            <th>
                NumeroCuenta
            </th>
            <th>
                IdEncargado
            </th>
            <th>
                NombreEncargado
            </th>
            <th>
                Apell1Encargado
            </th>
            <th>
                Id Encargado
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAbonador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroCuenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEncargadoNavigation.IdentificacionEncargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEncargadoNavigation.NombreEncargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEncargadoNavigation.Apell1Encargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEncargadoNavigation.IdParentezco)
                </td>
            </tr>
        }
    </tbody>
</table>
