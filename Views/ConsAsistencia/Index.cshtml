@model IEnumerable<WebNinnoFeliz.Models.Asistencia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Consulta de Asistencias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdAsistencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAsist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoAsist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNinnoNavigation.IdentificacionNinno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNinnoNavigation.NombreNinno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNinnoNavigation.Apell1Ninno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNinnoNavigation.Apell2Ninno)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAsistencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaAsist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoAsist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNinnoNavigation.IdentificacionNinno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNinnoNavigation.NombreNinno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNinnoNavigation.Apell1Ninno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNinnoNavigation.Apell2Ninno)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAsistencia" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdAsistencia" class="btn btn-info">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
