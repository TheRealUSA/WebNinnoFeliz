@model IEnumerable<WebNinnoFeliz.Models.AbonadorCargoMensuale> 
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tabla de Abonador Cargo Mensual</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
    <a asp-action="PDF" class="btn btn-primary">PDF</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdAbonadorCargoMensual)
            </th>
            <th>
                IdEncargado
            </th>
            <th>
                NumeroCuenta
            </th>
            <th>
                CargoMensual
            </th>
         @* <th>
                IdNiño
            </th> *@
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAbonadorCargoMensual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAbonadorNavigation.IdEncargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAbonadorNavigation.NumeroCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCargoNavigation.IdCargo)
            </td>
         @* <td>
                @Html.DisplayFor(modelItem => item.IdCargoNavigation.IdUsoComedorNavigation.IdNinno)
            </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAbonadorCargoMensual" class="btn btn-success">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdAbonadorCargoMensual" class="btn btn-info">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAbonadorCargoMensual" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
