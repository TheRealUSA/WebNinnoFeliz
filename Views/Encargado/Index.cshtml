@model IEnumerable<WebNinnoFeliz.Models.ViewModels.EncargadoParentezco>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<h1>Tabla de encargado</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table id="Tabla" class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEncargado)
            </th>
            <th>
                Identificacion
                @*@Html.DisplayNameFor(model => model.IdentificacionEncargado)*@
            </th>
            <th>
                Nombre
                @*@Html.DisplayNameFor(model => model.NombreEncargado)*@
            </th>
            <th>
                Primer apellido
                @*@Html.DisplayNameFor(model => model.Apell1Encargado)*@
            </th>
            <th>
                Segundo apellido
                @*@Html.DisplayNameFor(model => model.Apell2Encargado)*@
            </th>
            <th>
                Telefono
                @*@Html.DisplayNameFor(model => model.TelefonoEncargado)*@
            </th>
            <th>
                Dirreccion
                @*@Html.DisplayNameFor(model => model.DirecciónEncargado)*@
            </th>
            <th>
                Parentezco
                @*@Html.DisplayNameFor(model => model.IdParentezcoNavigation)*@
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEncargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentificacionEncargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEncargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apell1Encargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apell2Encargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonoEncargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirecciónEncargado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetallePar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEncargado" class="btn btn-success">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdEncargado" class="btn btn-info">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEncargado" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts
{ 
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.js"></script>
<script>
    $(document).ready(function () {
        $('#Tabla').DataTable();
    });
</script>
}
