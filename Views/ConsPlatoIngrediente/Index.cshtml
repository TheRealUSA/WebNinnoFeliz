@model IEnumerable<WebNinnoFeliz.Models.ViewModels.ListarPlato_Ingredientes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tabla de plato ingrediente</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                Id plato ingrediente
            </th>
            <th>
                Nombre plato
            </th>
            <th>
                Nombre ingrediente
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPlatoIngrediente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreIngrediente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePlato)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPlatoIngrediente" class="btn btn-success">Editar</a> 
                </td>
            </tr>
        }
    </tbody>
</table>