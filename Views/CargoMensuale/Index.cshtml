@model IEnumerable<WebNinnoFeliz.Models.CargoMensuale>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a> 
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCargo) 
            </th>
            <th>
                Cargo Mensual
            </th>
            <th>
                IdUsoComedor
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCargo) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoMensual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsoComedorNavigation.IdUsoComedor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCargo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCargo">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCargo">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
